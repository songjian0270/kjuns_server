<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators SYSTEM "../dtd/validation.dtd">
<validators>
    
    <validator target="com.kjuns.controller.CommonController" method="report">
	   	<field name="id" dataType="String">
	 		<rule validate="notEmpty" msg="举报内容ID不能为空"/>
	    </field>
	    <field name="type" dataType="Integer">
	 		<rule validate="notEmpty" msg="举报性质不能为空"/>
	    </field>
    </validator>
    
    <validator target="com.kjuns.controller.CommonController" method="insertFaq">
	   	<field name="title" dataType="String">
	 		<rule validate="notEmpty" msg="提问标题不能为空"/>
	    </field>
	      	<field name="content" dataType="String">
	 		<rule validate="notEmpty" msg="提问内容不能为空"/>
	    </field>
	   	<field name="token" dataType="String">
	 		<rule validate="notEmpty" msg="token不能为空"/>
	    </field>
	    <field name="signature" dataType="String">
			<rule validate="notEmpty" msg="signature不能为空" />
		</field>
    </validator>
    
</validators>